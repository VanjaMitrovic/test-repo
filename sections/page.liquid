    {%- unless selected_page.title == blank -%}
      {{ selected_page.title }}
    {%- else -%}
      {{ 'sections.page.placeholder_title' | t }}
    {%- endunless -%}
  </h2>
  <div class="rte">
    {%- unless selected_page.content == blank -%}
      {{ selected_page.content }}
    {%- else -%}
      <div class='page-placeholder-wrapper'>
        {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
      </div>
    {%- endunless -%}
  </div>
</div>

