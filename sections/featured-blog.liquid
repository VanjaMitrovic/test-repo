{%- assign blog = blogs[section.settings.blog] -%}

<div class="blog{% if section.settings.secondary_background %} section-secondary-background-layout{% endif %}">
  <div class="page-width">
    <div class="blog__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="blog__title">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.blog != blank and section.settings.show_view_all -%}
      <a href="{{ blog.url }}" class="blog__link h5">{{ 'sections.featured_blog.view_all' | t }} {% render 'icon-caret' %}</a>
    {%- endif -%}
    </div>

    {%- if section.settings.blog != blank -%}
      <ul class="blog__posts articles-wrapper grid grid--3-col" role="list">
        {%- for article in blog.articles limit: section.settings.post_limit -%}
          <li class="blog__post grid__item article">
            {% render 'article-card', blog: blog, article: article, show_image: section.settings.show_image %}
          </li>
        {%- endfor -%}
      </ul>
      {%- if section.settings.show_view_all -%}
        <div class="blog__view-all center{% if blog.articles_count > 1 and section.settings.post_limit > 1 %} small-hide{% endif %}">
          <a href="{{ blog.url }}" class="blog__button button">
            {{ 'sections.featured_blog.view_all' | t }}
          </a>
        </div>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

